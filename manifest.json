{
  "manifest_version": 2,
  "name": "Trello List Progress Bar",
  "description": "Adds a progress bar to the card list on trello counting the number of cards and status of checklist items",
  "version": "1.5",
  "background": {
    "scripts": ["js/background.js"]
  },  
  "icons": {
      "128": "img/icon_128.png",
      "48": "img/icon_48.png",
      "16": "img/icon_16.png"
   },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["https://trello.com/board/*"],
      "js": [ "js/jquery.js","js/config.js", "js/trello.js"]
    }
  ]
}
